{% extends "ApplicationEservicesBundle::layout.html.twig" %}

{% form_theme edit_form "ApplicationEservicesBundle:Form:fields.html.twig" %}

          
{% block javascripts %}
{{ parent() }}

<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
  
     <script type="text/javascript" src="{{ asset('jquery/jquery.ui.addresspicker.js') }}"></script>
{{ tinymce_init() }}
      {{ form_javascript(edit_form) }}
{% endblock %}
{% block stylesheets %}
{{ parent() }}
     {{ form_stylesheet(edit_form) }}
 <style>
 form#editform {background-color:whitesmoke; }
 #application_certificatsbundle_eproduittype_description_control_group {
 min-height:600px;}
 </style>
 {% endblock %}
{% block content_header '' %}
{% block title %}
PRODUIT: {{ entity.name }}
{% endblock %}
{% block content %}

<br><br>

 <form id="editform" action="{{ path('eproduit_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
   <div class="row">
 <div class="col-lg-3"> 
        {{ form_row(edit_form.name) }}
        {{ form_row(edit_form.idStatus) }}
        {{ form_row(edit_form.categorie) }}
        {% if entity.image is not null %}               
                                      <p>Image Actuelle</p>
         <img width="150px" src="{{ vich_uploader_asset(entity, 'image') }}" alt="{{ entity.imageName }}" />
         {% else %}
           <p>Pas d'Image</p>
         {% endif %}
            {{ form_row(edit_form.image) }}
           </div>
     
            <div class="col-lg-7"> 
             
 {{ form_row(edit_form.description) }}
        {{ form_row(edit_form.shortdescription) }}
{#    {{ form_row(edit_form.address) }}#}
{{ form_rest(edit_form) }} 
   </div>
           </div>
      <div class="row">
 <div class="col-lg-10"> 
                                 
  <button type="submit" class="btn btn-small btn-warning">Modifier</button>
  
    <a href="{{ path(btnretour)  }}" class="btn btn-small btn-success">Retour</a>
   </form>       
                                    
                     
</div>                     
</div>
